<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>fuel.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>supportfuel</object-name>
    <object-name>fuel</object-name>

    <!-- Objets transparents -->
    <object-name>vitrefuel</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitrefuel</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>glass.png</texture>
    <object-name>vitrefuel</object-name>
  </animation>

  <animation>
    <type>scale</type>
    <object-name>fuel</object-name>
    <property>/consumables/fuel/tank[0]/level-lbs</property>
    <x-factor> 0.00 </x-factor>
    <y-factor> 0.00 </y-factor>
    <z-factor> 1.33 </z-factor>
    <x-offset> 1.00 </x-offset>
    <y-offset> 1.00 </y-offset>
    <z-offset> 1.00 </z-offset>
    <center>
      <x-m> -0.014 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.060 </z-m>
    </center>
  </animation>

</PropertyList>

