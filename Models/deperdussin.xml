<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>deperdussin.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/Deperdussin/Models/Liveries", 10);

      var self = cmdarg();

      var float_0 = self.getNode("sim/multiplay/generic/float[0]", 1);
      var float_1 = self.getNode("sim/multiplay/generic/float[1]", 1);
      
      var crew_door = self.getNode("instrumentation/doors/crew/position-norm", 1);
      var passenger_door = self.getNode("instrumentation/doors/passenger/position-norm", 1);
    
      crew_door.alias(float_0);
      passenger_door.alias(float_1);
    </load>

    <unload>
      livery_update.stop();
      crew_door.unalias();
      passenger_door.unalias();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>capot</object-name>
    <object-name>bol</object-name>
    <object-name>ailes</object-name>
    <object-name>intcapot</object-name>
    <object-name>armature</object-name>
    <object-name>derive</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name> 
    <object-name>essieu</object-name>
    <object-name>trains</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>helice</object-name>
    <object-name>pate</object-name>
    <object-name>moteur</object-name>
    <object-name>trous</object-name>
    <object-name>reservoir</object-name>
    <object-name>nervures</object-name>

    <!-- Objets transparents -->
    <object-name>vitres</object-name>
    <object-name>cables</object-name>
    <object-name>tringleProfH</object-name>
    <object-name>tringleProfB</object-name>
    <object-name>tringleDirG</object-name>
    <object-name>tringleDirD</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitres</object-name>
    <object-name>cables</object-name>
    <object-name>tringleProfH</object-name>
    <object-name>tringleProfB</object-name>
    <object-name>tringleDirG</object-name>
    <object-name>tringleDirD</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>capot</object-name>
    <object-name>bol</object-name>
    <object-name>ailes</object-name>
    <object-name>intcapot</object-name>
    <object-name>armature</object-name>
    <object-name>derive</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name> 
    <object-name>essieu</object-name>
    <object-name>trains</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>helice</object-name>
    <object-name>pate</object-name>
    <object-name>moteur</object-name>
    <object-name>trous</object-name>
    <object-name>reservoir</object-name>
    <object-name>nervures</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
<!--
    <diffuse>
      <red-prop>diffuse/red</red-prop>
      <green-prop>diffuse/green</green-prop>
      <blue-prop>diffuse/blue</blue-prop>
    </diffuse>

    <ambient>
      <red-prop>ambient/red</red-prop>
      <green-prop>ambient/green</green-prop>
      <blue-prop>ambient/blue</blue-prop>
    </ambient>
-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <!-- Interieur -->
  <model>
    <path>Aircraft/Deperdussin/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

  <!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>moteur</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>900</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>300.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>900.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>900</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -2.823 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.272 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <name>ProfondeurTotale</name>
    <object-name>profondeur</object-name>
    <object-name>tringleProfH</object-name>
    <object-name>tringleProfB</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ProfondeurTotale</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor>11</factor>
    <center>
      <x-m> 2.521 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.349 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>tringleProfH</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor>-11</factor>
    <center>
      <x-m> 2.545 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.473 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>tringleProfB</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> -11 </factor>
    <center>
      <x-m> 2.546 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.222 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <name>DirectionTotale</name>
    <object-name>direction</object-name>
    <object-name>tringleDirG</object-name>
    <object-name>tringleDirD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>DirectionTotale</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 20 </factor>
    <center>
      <x-m> 2.559 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.522 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation> 

  <animation>
    <type>rotate</type>
    <object-name>tringleDirG</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> -20 </factor>
    <center>
      <x-m>  2.527 </x-m>
      <y-m> -0.082 </y-m>
      <z-m>  0.524 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation> 

  <animation>
    <type>rotate</type>
    <object-name>tringleDirD</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> -20 </factor>
    <center>
      <x-m> 2.527 </x-m>
      <y-m> 0.082 </y-m>
      <z-m> 0.524 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation> 

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>/gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.732 </x-m>
      <y-m> -0.662 </y-m>
      <z-m> -0.777 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>/gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.732 </x-m>
      <y-m>  0.662 </y-m>
      <z-m> -0.777 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

